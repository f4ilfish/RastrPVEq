  <ItemGroup>
    <ProjectReference Include="..\..\DatagridFilter\DataGridFilter\FilterDataGrid.Net\FilterDataGrid.Net.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
